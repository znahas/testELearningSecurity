{% extends "::layout.html.twig" %}

{% block fos_user_content %}
    <div class="col-md-4">
        <div class="form-horizontal">
            <fieldset>
                <legend>{{ 'profile.profile'|trans }}
                        <span class="btn-group pull-right">
                            <a href="{{ path('fos_user_change_password') }}" class="btn btn-default">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</a>
                            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default">Edit</a>
                        </span>
                </legend>
                <div class="form-group">
                    <label class="control-label">{{ 'profile.show.firstname'|trans }}</label>

                    <div class="controls">
                        <input type="text" value="{{ user.firstName }}" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'profile.show.lastname'|trans }}</label>

                    <div class="controls">
                        <input type="text" value="{{ user.lastName }}" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</label>

                    <div class="controls">
                        <input type="text" value="{{ user.username }}" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</label>

                    <div class="controls">
                        <input type="text" value="{{ user.email }}" disabled class="form-control">
                    </div>
                </div>


            </fieldset>
        </div>
    </div>
{% endblock fos_user_content %}
