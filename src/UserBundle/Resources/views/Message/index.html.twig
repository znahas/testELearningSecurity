{% extends '::layout.html.twig' %}

{% block breadcrumb %}
    <li class="active">Messages</li>
{% endblock breadcrumb %}

{% block content %}
    {% spaceless %}

        <a data-toggle="modal" data-target="#modal-message" class="btn btn-primary"
           href="{{ path('user_ajax_showmodalmessage') }}">
            New
        </a>
        <div class="modal fade" id="modal-message" tabindex="-1" role="dialog"></div>

        <table class="tablesorter table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Content</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>
                        <a href="{{ path('user_user_show',{'id': message.user.id}) }}">{{ message.user }}</a>
                    </td>
                    <td>{{ message.content }}</td>
                    <td>{{ message.createdAt|date('Y-m-d H:i:s') }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endspaceless %}
{% endblock %}
