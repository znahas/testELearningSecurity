<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <a class="close modal-close" data-dismiss="modal">&times;</a>
            <h4>{{ modal.header|trans }}</h4>
        </div>
        {% if modal.action %}
            {{ form_start(modal.form, {'action': modal.action }) }}
        {% else %}
            {{ form_start(modal.form) }}
        {% endif %}
        <div class="modal-body">
            <div class="col-md-7">
                {{ form_widget(modal.form) }}
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="modal-footer">
            <a class="btn btn-default modal-close" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-default btn-primary" value="Submit" />
        </div>
        {{ form_end(modal.form) }}
    </div>
</div>
<script>
    $(function()
    {
        onLoadJquery();
    });
</script>
